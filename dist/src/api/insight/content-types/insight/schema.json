{
    "kind": "collectionType",
    "collectionName": "insights",
    "info": {
        "singularName": "insight",
        "pluralName": "insights",
        "displayName": "Insight",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true
        },
        "description": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "text",
            "required": true
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "technologies": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::technology.technology",
            "inversedBy": "insights"
        },
        "slug": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true,
            "regex": "^[a-z][^\\s/]*$",
            "unique": true
        },
        "insight_category": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::insight-category.insight-category",
            "inversedBy": "insights"
        },
        "content": {
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "insight-content.insight-content",
            "required": true
        }
    }
}
